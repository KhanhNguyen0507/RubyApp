<p>
<h1>Create new Good</h1>
</hr>
</p>

<% if @good.errors.any?%>
<div class="row">
	<div class="alert alert-danger col-md-8 col-md-offset-2">
		<h5>Please correct the folowing errors:</h5>
		<ul>
			<%@good.errors.full_messages.each do |message|%>
				<li><%=message%></li>
			<%end%>
		</ul>
	</div>
</div>
<%end%>

<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%=form_for @good do |f|%>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :price %>
			<%= f.text_field :price %>

			<%= f.label :summary %>
			<%= f.text_field :summary %>

			<%= f.label :description %>
			<%= f.text_area :description, rows: 10%>		

			<%= f.submit "Create Good", class: "btn btn-success"%>	
		<%end%>
	</div>
</div>